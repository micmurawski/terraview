{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "dist/frontend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/frontend/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
